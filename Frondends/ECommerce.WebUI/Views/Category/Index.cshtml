@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<h3>Kategoriler</h3>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>İşlemler</th>

    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>

            <th>@count</th>
            <th>@item.CategoryName</th>
            <td>
                <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-info">Güncelle</a>
            </td>
        </tr>
    }


</table>
<a href="/Category/CreateCategory/" class="btn btn-success">Yeni Kategori Ekle</a>